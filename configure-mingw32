#!/bin/bash
./configure --host=i586-mingw32msvc \
	--with-xplc=$PWD/../ports/xplc/build/xplc \
	CPPFLAGS="\
		-I$PWD/../ports/xplc/build/xplc/include \
		-I$PWD/../ports/zlib/build/zlib \
		-I$PWD/../ports/openssl/build/openssl/include" \
	LDFLAGS="\
		-L$PWD/../ports/xplc/build/xplc \
		-L$PWD/../ports/zlib/build/zlib \
		-L$PWD/../ports/openssl/build/openssl" \
	LIBS="-lwsock32 -lgdi32" \
	$@
